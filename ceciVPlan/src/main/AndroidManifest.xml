<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leonard.ceciVPlan" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.leonardpieper.ceciVPlan.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.leonardpieper.ceciVPlan.SettingsActivityOld"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.github.leonardpieper.ceciVPlan.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name="com.github.leonardpieper.ceciVPlan.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.github.leonardpieper.ceciVPlan.ExamsActivity"
            android:label="@string/title_activity_exams"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="com.github.leonardpieper.ceciVPlan.SettingsFragment" >
        </activity>

        <receiver android:name="com.github.leonardpieper.ceciVPlan.NotifyReceiver" >
        </receiver>

        <service android:name="com.github.leonardpieper.ceciVPlan.NotifyService" >
        </service>

        <activity android:name="com.github.leonardpieper.ceciVPlan.FirstStartActivity" >
        </activity>
    </application>

</manifest>
